---
import BaseLayout from './BaseLayout.astro'

interface Props {
    title: string
    tags?: string[]
    postDate?: Date
    lastUpdated?: Date
}

const { title, tags, postDate, lastUpdated } = Astro.props
---

<BaseLayout>
    <style>
        .post-body {
            @apply break-before-auto space-y-2 max-w-5xl;

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                @apply text-4xl p-2;
            }
            h1 {
                @apply sm:text-7xl sm:p-5;
            }
            h2 {
                @apply sm:text-6xl sm:p-5;
            }
            h3 {
                @apply sm:text-5xl sm:p-5;
            }
            h4,
            h5,
            h6 {
                @apply sm:p-5;
            }
            p {
                @apply text-2xl;
            }
        }
        .footnotes {
            @apply text-xl;
            ol {
                list-style-type: decimal;
            }
        }
    </style>
    <div class="sm:mx-20 space-y-5">
        <h1 class="text-4xl sm:mx-10 sm:my-10 sm:text-7xl max-w-5xl">
            {title}
        </h1>
        <section class="flex flex-col">
            {
                postDate && (
                    <span class="text-sm">
                        Posted{' '}
                        {new Date(
                            postDate.setUTCHours(
                                new Date().getTimezoneOffset() / 60
                            )
                        ).toLocaleDateString()}
                    </span>
                )
            }
            {
                lastUpdated && (
                    <span class="text-sm">
                        Updated{' '}
                        {new Date(
                            lastUpdated.setUTCHours(
                                new Date().getTimezoneOffset() / 60
                            )
                        ).toLocaleDateString()}
                    </span>
                )
            }
            {
                tags && (
                    <span class="text-sm space-x-2 pb-10">
                        Tagged: &nbsp;
                        {tags.map((t) => (
                            <a href={`/tagged/${t}`}>{t}</a>
                        ))}
                    </span>
                )
            }
        </section>
        <article class="post-body">
            <slot />
        </article>
    </div>
</BaseLayout>
